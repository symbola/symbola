{
  "name": "symbola",
  "private": true,
  "author": "slikts <dabas@untu.ms>",
  "workspaces": [
    "packages/*",
    "configs/*"
  ],
  "description": "Symbol protocols for JavaScript",
  "scripts": {
    "p:immer": "yarn workspace @symbola/immer",
    "p:core": "yarn workspace @symbola/core",
    "p:object": "yarn workspace @symbola/object",
    "p:iterable": "yarn workspace @symbola/iterable",
    "p:async": "yarn workspace @symbola/async-iterable",
    "p:function": "yarn workspace @symbola/function",
    "p:number": "yarn workspace @symbola/number",
    "p:set": "yarn workspace @symbola/set",
    "p:string": "yarn workspace @symbola/string",
    "c:config": "yarn workspace @symbola/config",
    "c:eslint": "yarn workspace @symbola/eslint-config",
    "c:jest": "yarn workspace @symbola/jest",
    "c:prettier": "yarn workspace @symbola/prettier-config",
    "c:typescript": "yarn workspace @symbola/typescript-config",
    "c:babel": "yarn workspace @symbola/babel-config",
    "postinstall": "[ -z \"$CI\" ] && husky install || true",
    "test": "yarn workspaces foreach -pv run test",
    "test:ci": "yarn workspaces foreach -pv run test:ci",
    "lint:eslint": "yarn workspaces foreach -pv run lint:eslint",
    "lint:eslint:fix": "yarn workspaces foreach -pv run lint:eslint:fix",
    "lint:prettier": "yarn workspaces foreach -pv run lint:prettier",
    "lint:prettier:fix": "yarn workspaces foreach -pv run lint:prettier:fix",
    "build": "yarn workspaces foreach --all --exclude symbola -ptv run build",
    "build:dev": "tsc -b -w",
    "build:prod": "yarn workspaces foreach --all --exclude symbola -ptv run build",
    "docs": "typedoc"
  },
  "engines": {
    "node": ">= 24"
  },
  "engineStrict": true,
  "volta": {
    "node": "24.10.0"
  },
  "homepage": "https://github.com/symbola/symbola#readme",
  "repository": "git@github.com:symbola/symbola.git",
  "bugs": {
    "url": "https://github.com/symbola/symbola/issues"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@dmeents/semantic-release-yarn": "^1.1.13",
    "@eslint/js": "^9.38.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.1.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@symbola/config": "workspace:^",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/prettier": "^3.0.0",
    "@types/semantic-release": "^21.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "babel-plugin-transform-async-to-promises": "^0.8.18",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "fp-ts": "^2.16.11",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "knip": "^5.66.3",
    "lint-staged": "^16.2.6",
    "microbundle": "^0.15.1",
    "multi-semantic-release": "^3.0.2",
    "prettier": "^3.6.2",
    "queueable": "^5.3.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.1",
    "tuplerone": "^3.3.3",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "packageManager": "yarn@4.10.3"
}
