{
  "name": "symbola",
  "private": true,
  "workspaces": [
    "packages/*",
    "configs/*"
  ],
  "description": "Symbol protocols for JavaScript",
  "scripts": {
    "p:immer": "yarn workspace @symbola/immer",
    "p:core": "yarn workspace @symbola/core",
    "p:object": "yarn workspace @symbola/object",
    "p:function": "yarn workspace @symbola/function",
    "p:number": "yarn workspace @symbola/number",
    "p:string": "yarn workspace @symbola/string",
    "c:config": "yarn workspace @symbola/config",
    "c:eslint": "yarn workspace @symbola/config-eslint",
    "c:prettier": "yarn workspace @symbola/config-prettier",
    "c:typescript": "yarn workspace @symbola/config-typescript",
    "c:babel": "yarn workspace @symbola/config-babel",
    "postinstall": "husky install",
    "test": "yarn workspaces foreach -pv run test",
    "test:ci": "yarn workspaces foreach -pv run test:ci",
    "lint:eslint": "yarn workspaces foreach -pv run lint:eslint",
    "lint:eslint:fix": "yarn workspaces foreach -pv run lint:eslint:fix",
    "lint:prettier": "yarn workspaces foreach -pv run lint:prettier",
    "lint:prettier:fix": "yarn workspaces foreach -pv run lint:prettier:fix",
    "types": "tsc -b",
    "build": "yarn workspaces foreach -ptv run build"
  },
  "engines": {
    "node": ">= 18"
  },
  "engineStrict": true,
  "volta": {
    "node": "18.13.0"
  },
  "homepage": "https://github.com/symbola/symbola#readme",
  "repository": "github:symbola/symbola",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@symbola/config": "workspace:^",
    "@types/eslint": "^8",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2",
    "@types/semantic-release": "^20",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^4.2.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "microbundle": "^0.15.1",
    "multi-semantic-release": "^3.0.1",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.1",
    "semantic-release": "^20.0.2",
    "typescript": "^4.9.4"
  },
  "packageManager": "yarn@3.3.1"
}
